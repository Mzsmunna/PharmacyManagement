                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Portfolio Health</h2>
                    </div>
                    <div class="gauge-container">
                        <svg class="gauge" viewBox="0 0 120 80">
                            <defs>
                                <linearGradient id="gaugeGradient1" x1="0%" y1="0%" x2="100%" y2="0%">
                                    <stop offset="0%" style="stop-color:#c27878" />
