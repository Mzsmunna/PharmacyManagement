    <div class="settings-content active" id="profile">
        <div class="card">

            <div class="card-header">
                <h3 class="card-title" id="medCardTitle">New Medicine</h3>
                <p class="card-description">Store medicine to inventory</p>
            </div>

            <div class="profile-header">
                <div class="profile-avatar">
                    MED
                    <div class="avatar-edit">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" />
                            <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" />
                        </svg>
                    </div>
                </div>
                <div class="profile-info">
                    <h2>Medicine Name</h2>
                    <p>Medicine Deatils</p>
                    <span class="profile-badge">Medicine Type</span>
                </div>
            </div>
            <form class="auth-form active" id="medsForm">
                <div class="form-grid">
                    <div class="form-group">
                        <label class="form-label">Medicine Name</label>
                        <input type="text" id="medName" class="form-input" placeholder="Name of medicine..." value="" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Medicine Type</label>
                        <select id="medType" class="form-select" required>
                            <option value="Tablet" selected>Tablet</option>
                            <option value="Capsule">Capsule</option>
                            <option value="Syrup">Syrup</option>
                            <option value="Injection">Injection</option>
                            <option value="Drops">Drops</option>
                            <option value="Inhaler">Inhaler</option>
                            <option value="Suppository">Suppository</option>
                            <option value="Cream">Cream</option>
                            <option value="Ointment">Ointment</option>
                        </select>
                    </div>
                    <div class="form-group full-width">
                        <label class="form-label">Medicine Description</label>
                        <input type="text" id="medDesc" class="form-input" placeholder="Deatils about medicine..." value="" required>
                    </div>
                </div>

                <div class="btn-group">
                    <button type="submit" id="medAddEdit" class="btn primary">+ Add Medicine</button>
                    <button class="btn">Cancel</button>
                </div>
            </form>
        </div>

        
        <div class="card" id="medsBatchForm">
            <div class="card-header">
                <h3 class="card-title">New Batch</h3>
                <p class="card-description">Manage your API access for third-party integrations</p>
            </div>

            <form class="auth-form active">
                <div class="form-grid-trio">
                    <div class="form-group">
                        <label class="form-label">Batch No</label>
                        <input type="text" id="medBatchNo" class="form-input" placeholder="Batch Number" value="" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Unit Price</label>
                        <input type="number" id="medBatchUp" class="form-input" placeholder="Amount" value="1" min="1" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Currency</label>
                        <select class="form-select" id="medBatchCurr">
                            <option value="$" selected>$</option>
                            <option value="€">€</option>
                            <option value="₹">Rupee</option>
                            <option value="BDT">BDT</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Quantity</label>
                        <input type="number" id="medBatchQt" class="form-input" value="1" min="1" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Discount</label>
                        <input type="text" id="medBatchDisc" class="form-input" value="0" min="0">
                    </div>
                    <div class="form-group">
                        @* <span class="transaction-value negative">Invalid</span> *@
                        <label class="form-label">Expiry Date <span id="medBatchExpIV" class="transaction-status invalid" style="display:none;float:right"> Invalid Date</span></label>
                        <input type="text" id="medBatchExp" class="form-input form-date" placeholder="MM-DD-YY" value="" required>
                    </div>
                </div>

                <div class="btn-group">
                    <button type="submit" class="btn primary">+ Add Batch</button>
                </div>
            </form>
        </div>

